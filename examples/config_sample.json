{
  "input_paths": {
    "resumes_dir": "input/resumes",
    "cover_letters_dir": "input/cover_letters",
    "job_descriptions_dir": "input/job_descriptions"
  },
  "output_path": "output",
  "default_files": {
    "resume": "my_resume.docx",
    "cover_letter": "my_cover_letter.docx"
  },
  "openai_settings": {
    "model": "gpt-3.5-turbo",
    "temperature": 0.7,
    "max_tokens": 500
  },
  "file_formats": {
    "output_format": "docx",
    "filename_template": "{document_type}_{company}_{position}_{date}"
  },
  "placeholders": {
    "company_name": "[COMPANY_NAME]",
    "position_title": "[POSITION_TITLE]",
    "custom_placeholders": {
      "[RECRUITER_NAME]": "Hiring Manager",
      "[DATE]": "auto"
    }
  }
} 